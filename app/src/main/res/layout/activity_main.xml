<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/cardiobutton"
        android:layout_width="190dp"
        android:layout_height="90dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="20dp"
        android:text="Cardio"
        app:layout_constraintBottom_toTopOf="@+id/weightsbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepcounter"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/weightsbutton"
        android:layout_width="190dp"
        android:layout_height="90dp"
        android:layout_marginBottom="250dp"
        android:text="Weights"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/stepcounter"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="76dp"
        android:contentDescription="Step counter"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>